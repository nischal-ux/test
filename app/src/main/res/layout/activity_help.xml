<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".Help"
    android:orientation="vertical">

<LinearLayout
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <ImageView
        android:background="@drawable/ic_add_circle_black_24dp"
        android:layout_width="50dp"
        android:layout_height="80dp"
        />
    <TextView
        android:text="ADD button is used to add pictures with details.
"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        />
</LinearLayout>
    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:background="@mipmap/update"
            android:layout_width="50dp"
            android:layout_height="80dp"
            />
        <TextView
            android:text="update butto is used for editing or correction.

"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            />
    </LinearLayout>
    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:background="@mipmap/del"
            android:layout_width="50dp"
            android:layout_height="80dp"
            />
        <TextView
            android:text="delete button is used foe delete the picture.

"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            />
    </LinearLayout>
    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:background="@drawable/ic_search_black_24dp"
            android:layout_width="50dp"
            android:layout_height="80dp"
            />
        <TextView
            android:text="search bar is used for seaching user.
"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            />
    </LinearLayout>
</LinearLayout>